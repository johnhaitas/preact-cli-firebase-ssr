{
  "private": true,
  "name": "preact-cli-firebase-ssr",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "preact-build": "preact build",
    "build": "npm run preact-build && webpack",
    "serve": "npm run build && rm build/index.html && firebase serve --only hosting,functions",
    "deploy": "firebase deploy --only hosting,functions",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "globals": {
      "PRERENDER": true
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "copy-webpack-plugin": "^4.6.0",
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "history": "^4.7.2",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^21.2.1",
    "preact-cli": "^2.2.1",
    "preact-cli-plugin-fast-async": "^1.0.1",
    "preact-cli-sw-precache": "^1.0.3",
    "preact-render-spy": "^1.2.1",
    "webpack": "^3.12.0",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-isomorphic-dev-middleware": "^4.1.0"
  },
  "dependencies": {
    "firebase-functions": "^2.1.0",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.7"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js"
    ],
    "testRegex": "(/(__tests__|tests)/.*|(\\.|/)(test|spec))\\.jsx?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/tests/__mocks__/*"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group"
    }
  }
}
